NEXT_PUBLIC_API_URL=YOUR_API_URL_HERE

# Broadcasting / Real-time Notifications
# Choose one: "reverb" (Laravel Reverb) or "pusher" (Pusher)
NEXT_PUBLIC_BROADCAST_DRIVER=reverb

# Laravel Reverb Configuration (Default - Free & Open Source)
NEXT_PUBLIC_REVERB_APP_KEY=your-reverb-app-key
NEXT_PUBLIC_REVERB_HOST=localhost
NEXT_PUBLIC_REVERB_PORT=8080
NEXT_PUBLIC_REVERB_SCHEME=http

# Alternative: Pusher Configuration (Commercial Service)
# NEXT_PUBLIC_PUSHER_APP_KEY=your-pusher-key
# NEXT_PUBLIC_PUSHER_APP_CLUSTER=mt1
